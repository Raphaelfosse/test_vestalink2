<%= link_to "Ajouter un nouveau lot", new_site_part_path, style: "color:#000000 text-align:center;" %>
<% @parts.each do |part| %>
  <div class="card">
    <div class="card-header">
      <%= part.part_type_designation %></br>
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p>Référence du site : <%= part.reference_site %></p>
        <p>Réference du lot : <%= part.reference_part %></p>
      </blockquote>
    </div>
  </div>
<% end %>
