<h1 style="text-align: center;">Création de lot</h1>
<%= form_for @part, url: {action: "create"} do |form| %>
  <div class="form-group">
    <%= form.label :reference_site, "Réference du site", class: "control-label" %>
    <%= form.collection_select :reference_site, Part.select(:reference_site).distinct, :reference_site, :reference_site %>
  </div>
  <div class="form-group">
    <%= form.label :part_type_designation, 'Type de lot' , class: "control-label" %>
    <%= form.text_field :part_type_designation, class: "form-control" %>
  </div>

  <%= form.submit "Modifier", class: "btn btn-primary" %>
<% end %>
